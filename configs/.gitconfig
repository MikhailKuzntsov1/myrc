[core]
	editor = code --wait
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less
    hooksPath = /Users/posidoni/.githooks
	excludesfile = /Users/posidoni/.gitignore_global
[user]
	name = "Mikhail Kuznetsov"
	email = mikhail.n.kuznetsov@gmail.com
	username = MikhailKuzntsov1
[pull]
    rebase = false
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[mergetool]
    prompt = false
[commit]
  template = ~/.gitmessage
[github]
    user = mikhail.n.kuznetsov@gmail.com
    username = MikhailKuzntsov1
    name = MikhailKuzntsov1
[init]
	defaultBranch = main
[alias]
    tag = tag
    commit = commit
    log = log --graph
    sign = rebase --exec 'git commit --amend --no-edit -n -S' -i --root
    rr = rebase -i --root
[web]
	browser = google-chrome
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vscode
[gitflow "prefix"]
	versiontag = v
[sequence]
	editor = code --wait
[mergetool "vscode"]
	cmd = code --args $* --wait
[difftool "vscode"]
	cmd = code --wait  --diff $LOCAL $REMOTE
